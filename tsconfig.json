/*
 * Typescript config for Development
 */

{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "lib": ["ESNext", "dom"],
        "moduleResolution": "Bundler",
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true /* Create sourcemaps for d.ts files. */,
        "emitDeclarationOnly": true,
        "strict": true,
        "types": ["node"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/tests", "node_modules"]
}
